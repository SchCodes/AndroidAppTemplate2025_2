<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/navigation_home">

    <!-- Fragment de Home -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.lotolab.app.ui.fragments.HomeFragment"
        android:label="Início"
        tools:layout="@layout/fragment_home" />

    <!-- Fragment de Calculator -->
    <fragment
        android:id="@+id/navigation_calculator"
        android:name="com.lotolab.app.ui.fragments.CalculatorFragment"
        android:label="Calculadora"
        tools:layout="@layout/fragment_calculator" />

    <!-- Fragment de Historic -->
    <fragment
        android:id="@+id/navigation_historic"
        android:name="com.lotolab.app.ui.fragments.HistoricFragment"
        android:label="Histórico"
        tools:layout="@layout/fragment_historic" />

    <!-- Fragment de Charts -->
    <fragment
        android:id="@+id/navigation_charts"
        android:name="com.lotolab.app.ui.fragments.ChartsFragment"
        android:label="Gráficos"
        tools:layout="@layout/fragment_charts" />

    <!-- Fragment de Profile -->
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.lotolab.app.ui.fragments.ProfileFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_profile" />

</navigation>
