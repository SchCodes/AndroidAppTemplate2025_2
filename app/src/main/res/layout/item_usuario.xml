<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/card_stroke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Cabeçalho com nome e status premium -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_nome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nome do Usuário"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                tools:text="João Silva" />

            <TextView
                android:id="@+id/tv_status_premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_premium_badge"
                android:textColor="@color/white"
                android:clickable="true"
                android:focusable="true"
                tools:text="Premium" />

        </LinearLayout>

        <!-- Email do usuário -->
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="email@exemplo.com"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            tools:text="joao.silva@email.com" />

        <!-- Informações de cadastro e atualização -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_data_cadastro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cadastro: 01/01/2024"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                tools:text="Cadastro: 01/01/2024" />

            <TextView
                android:id="@+id/tv_ultima_atualizacao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Atualizado: 15/03/2024"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:gravity="end"
                tools:text="Atualizado: 15/03/2024" />

        </LinearLayout>

        <!-- Limite de cálculos e status da assinatura -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_limite_calculos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Limite: 3/dia"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                tools:text="Limite: Ilimitado" />

            <TextView
                android:id="@+id/tv_assinatura_ativa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Assinatura: Ativa"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:gravity="end"
                tools:text="Assinatura: Ativa" />

        </LinearLayout>

        <!-- Firebase UID -->
        <TextView
            android:id="@+id/tv_firebase_uid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="UID: abc123def456..."
            android:textSize="10sp"
            android:textColor="@color/text_tertiary"
            android:fontFamily="monospace"
            tools:text="UID: abc123def456..." />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
