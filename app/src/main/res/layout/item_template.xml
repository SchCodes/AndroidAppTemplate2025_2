<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/profile_card_background"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="false"
    app:strokeColor="@color/profile_card_stroke"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:contentDescription="@string/dashboard_image_description"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_avatar"
            app:shapeAppearanceOverlay="@style/AppShapeAppearanceCircle"
            app:strokeColor="@color/caixa_turquesa"
            app:strokeWidth="1.5dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_title_placeholder"
                android:textColor="@color/caixa_oceano"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/item_category_placeholder"
                android:textColor="@color/profile_text_secondary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="monospace"
                android:text="@string/item_numbers_placeholder"
                android:textColor="@color/caixa_oceano"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_probability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_probability_placeholder"
                    android:textColor="@color/profile_text_secondary"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/item_concurso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/item_concurso_placeholder"
                    android:textColor="@color/profile_text_secondary"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/item_notes_placeholder"
                android:textColor="@color/profile_text_secondary"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
