<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ai_logic_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="120dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:paddingBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assistente IA Loterias"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Converse com o Gemini para tirar dúvidas de análise e apostas. O histórico não é mantido entre sessões."
            android:textColor="@color/profile_text_secondary"
            android:textSize="14sp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/caixa_laranja"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/selected_image_preview"
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:adjustViewBounds="true"
                    android:background="@color/caixa_gelo"
                    android:contentDescription="Imagem selecionada"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/gallery_thumb" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contexto visual (opcional)"
                        android:textColor="@color/caixa_azul"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Anexe imagens de comprovantes, prints ou tabelas. Vamos usar como contexto junto da sua mensagem."
                        android:textColor="@color/caixa_oceano"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_select_image"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:minWidth="0dp"
                            android:text="Anexar"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:backgroundTint="@color/caixa_laranja" />

                        <Space
                            android:layout_width="8dp"
                            android:layout_height="0dp" />

                        <Button
                            android:id="@+id/btn_clear_image"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:minWidth="0dp"
                            android:text="Limpar"
                            android:textAllCaps="false"
                            android:textColor="?attr/colorOnSurface"
                            android:backgroundTint="@color/caixa_chip_bg" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            tools:listitem="@layout/item_ai_message_bot" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="18dp"
            app:cardElevation="10dp"
            app:strokeColor="@color/caixa_oceano"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mensagem"
                    android:textColor="@color/caixa_azul"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/prompt_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/caixa_gelo"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorMutedText"
                    android:gravity="top"
                    android:hint="Descreva sua pergunta para a IA"
                    android:inputType="textMultiLine"
                    android:minHeight="72dp"
                    android:padding="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/loading_indicator"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_send"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:minWidth="120dp"
                        android:text="Enviar"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/caixa_azul" />
                </LinearLayout>

                <TextView
                    android:id="@+id/helper_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Modelo: Gemini 2.0 Flash - Uso apenas o contexto dessa sessão. Anexar imagem é opcional."
                    android:textColor="@color/caixa_oceano"
                    android:textSize="12sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
