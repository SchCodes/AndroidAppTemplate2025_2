<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardHistorico"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/loteria_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Cabeçalho com tipo e timestamp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTipoCalculo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Cálculo"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00/00 00:00"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:alpha="0.8" />

            </LinearLayout>

            <!-- Status do cálculo -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivStatusCalculo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_check_circle"
                    android:contentDescription="Status"
                    android:layout_marginEnd="8dp"
                    android:tint="@color/white" />

                <TextView
                    android:id="@+id/tvStatusCalculo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Concluído"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

        <!-- Parâmetros do cálculo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parâmetros:"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvParametros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parâmetros do cálculo aparecerão aqui..."
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Resultado do cálculo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado:"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado do cálculo aparecerá aqui..."
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Informações adicionais -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duração"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:alpha="0.7" />

                <TextView
                    android:id="@+id/tvDuracao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0ms"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qualidade"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:alpha="0.7" />

                <TextView
                    android:id="@+id/tvQualidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorito"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:alpha="0.7" />

                <ImageView
                    android:id="@+id/ivFavorito"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_favorite_border"
                    android:contentDescription="Favorito"
                    android:tint="@color/white"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compartilhado"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:alpha="0.7" />

                <ImageView
                    android:id="@+id/ivCompartilhado"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_share"
                    android:contentDescription="Compartilhado"
                    android:tint="@color/white"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botões de ação -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerDetalhes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Detalhes"
                android:textColor="@color/white"
                app:backgroundTint="@color/loteria_secondary"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRepetirCalculo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Repetir"
                android:textColor="@color/white"
                app:backgroundTint="@color/loteria_accent"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
