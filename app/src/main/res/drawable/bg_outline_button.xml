<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/profile_card_background" />
            <corners android:radius="14dp" />
            <stroke
                android:width="1dp"
                android:color="@color/caixa_laranja" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/profile_card_background" />
            <corners android:radius="14dp" />
            <stroke
                android:width="1dp"
                android:color="@color/profile_text_secondary" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/profile_card_background" />
            <corners android:radius="14dp" />
            <stroke
                android:width="1dp"
                android:color="@color/caixa_laranja" />
        </shape>
    </item>
</selector>
