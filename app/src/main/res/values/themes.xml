<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AndroidAppTemplate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/caixa_azul</item>
        <item name="colorPrimaryVariant">@color/caixa_oceano</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/caixa_laranja</item>
        <item name="colorSecondaryVariant">@color/caixa_turquesa</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/profile_card_background</item>
        <item name="colorOnSurface">@color/caixa_oceano</item>
        <item name="android:colorBackground">@color/profile_card_background</item>

        <item name="android:statusBarColor">@color/caixa_oceano</item>
        <item name="android:navigationBarColor">@color/caixa_oceano</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@drawable/bg_profile_gradient</item>

        <item name="materialButtonStyle">@style/Widget.LotoAnalise.Button</item>
        <item name="textInputStyle">@style/Widget.LotoAnalise.OutlinedTextInputLayout</item>
        <item name="android:buttonStyle">@style/Widget.LotoAnalise.Button</item>
    </style>

    <style name="Widget.LotoAnalise.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/caixa_laranja</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.LotoAnalise.SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/caixa_oceano</item>
        <item name="strokeColor">@color/caixa_oceano</item>
        <item name="backgroundTint">@color/profile_card_background</item>
    </style>

    <style name="Widget.LotoAnalise.OutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/caixa_azul</item>
        <item name="boxStrokeWidth">1.2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="hintTextColor">@color/caixa_oceano</item>
        <item name="android:textColorHint">@color/caixa_oceano</item>
    </style>

    <style name="Widget.LotoAnalise.OutlinedTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/caixa_oceano</item>
        <item name="android:textColorHint">@color/caixa_oceano</item>
    </style>
</resources>
