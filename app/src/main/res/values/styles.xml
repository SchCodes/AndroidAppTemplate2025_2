<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo base para o tema -->
    <style name="Theme.LotoLab" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Cores primárias -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Cores secundárias -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        
        <!-- Cores de superfície -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Cores de fundo -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Cores de erro -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navegação -->
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Tipografia -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.LotoLab.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.LotoLab.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.LotoLab.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.LotoLab.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.LotoLab.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.LotoLab.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.LotoLab.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.LotoLab.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.LotoLab.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.LotoLab.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.LotoLab.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.LotoLab.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.LotoLab.Overline</item>
        
        <!-- Componentes -->
        <item name="materialButtonStyle">@style/Widget.LotoLab.Button</item>
        <item name="textInputStyle">@style/Widget.LotoLab.TextInputLayout</item>
        <item name="cardViewStyle">@style/Widget.LotoLab.CardView</item>
        <item name="bottomNavigationStyle">@style/Widget.LotoLab.BottomNavigationView</item>
    </style>

    <!-- Estilo para tema escuro -->
    <style name="Theme.LotoLab.Dark" parent="Theme.LotoLab">
        <item name="colorSurface">@color/surface_dark_theme</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark_theme</item>
        <item name="android:colorBackground">@color/background_dark_theme</item>
        <item name="colorOnSurface">@color/text_primary_dark_theme</item>
        <item name="colorOnBackground">@color/text_primary_dark_theme</item>
        <item name="android:statusBarColor">@color/background_dark_theme</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/surface_dark_theme</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Estilos de tipografia -->
    <style name="TextAppearance.LotoLab.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="TextAppearance.LotoLab.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="TextAppearance.LotoLab.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.LotoLab.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.LotoLab.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.LotoLab.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.LotoLab.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.LotoLab.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.LotoLab.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.LotoLab.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.LotoLab.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.LotoLab.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.LotoLab.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Estilos de componentes -->
    <style name="Widget.LotoLab.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.LotoLab.Button</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="Widget.LotoLab.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.LotoLab.Button</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Widget.LotoLab.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <style name="Widget.LotoLab.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_stroke</item>
    </style>

    <style name="Widget.LotoLab.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/surface</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemRippleColor">@color/primary</item>
    </style>

    <!-- Estilos específicos -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Estilos de estado -->
    <style name="Widget.LotoLab.Button.Premium" parent="Widget.LotoLab.Button">
        <item name="backgroundTint">@color/premium</item>
        <item name="android:textColor">@color/text_on_secondary</item>
    </style>

    <style name="Widget.LotoLab.Button.Error" parent="Widget.LotoLab.Button">
        <item name="backgroundTint">@color/error</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.LotoLab.Button.Success" parent="Widget.LotoLab.Button">
        <item name="backgroundTint">@color/success</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
